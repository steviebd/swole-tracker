# Production Environment Configuration for Clerk -> Supabase Migration
# Copy this to .env.production and update with your production values

# Environment
NODE_ENV=production

# Supabase Authentication & Database (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-prod-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# Production Database URL
DATABASE_URL=postgresql://user:password@your-prod-host:5432/your_prod_db?sslmode=require

# PostHog Analytics (Production)
NEXT_PUBLIC_POSTHOG_KEY=your_production_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Production Site URL
NEXT_PUBLIC_SITE_URL=https://your-production-domain.com

# Production Environment Flag
NEXT_PUBLIC_ENV=production

# Vercel AI Gateway (Production)
VERCEL_AI_GATEWAY_API_KEY=your_production_ai_gateway_key
AI_GATEWAY_API_KEY=your_production_ai_gateway_key

# WHOOP Integration (Production)
WHOOP_CLIENT_ID=your_production_whoop_client_id
WHOOP_CLIENT_SECRET=your_production_whoop_client_secret
WHOOP_REDIRECT_URI=https://your-production-domain.com/api/auth/whoop/callback
WHOOP_SYNC_RATE_LIMIT_PER_HOUR=100
WHOOP_WEBHOOK_SECRET=your_production_whoop_webhook_secret

# Rate Limiting (Production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TEMPLATE_OPERATIONS_PER_HOUR=500
RATE_LIMIT_WORKOUT_OPERATIONS_PER_HOUR=1000
RATE_LIMIT_API_CALLS_PER_MINUTE=100