{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Performance optimizations
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsconfig.tsbuildinfo",

    // Skip expensive checks for performance
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Optimize compilation
    "assumeChangesOnlyAffectDirectDependencies": true,

    // Reduce memory usage
    "maxNodeModuleJsDepth": 0,

    // Faster compilation with fewer checks
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Keep essential strict checks
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,

    // Optimize for development
    "removeComments": false,
    "importHelpers": false,
    "downlevelIteration": false,
    "sourceMap": false,

    // Project references for better incremental compilation
    "composite": true,
    "declaration": false,
    "declarationMap": false
  },

  // Include only source files for faster compilation
  "include": [
    "src/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],

  // Exclude test files and build outputs
  "exclude": [
    "node_modules",
    "public",
    ".next",
    "coverage",
    "apps",
    "scripts",
    "src/__e2e__",
    "src/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],

  // Project references for incremental compilation
  "references": [
    {
      "path": "./tsconfig.src.json"
    }
  ]
}