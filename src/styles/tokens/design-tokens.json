        "md": {
          "$value": "1rem",
          "$description": "Medium component padding"
        },
        "lg": {
          "$value": "1.5rem",
          "$description": "Large component padding"
        },
        "xl": {
          "$value": "2rem",
          "$description": "Extra large component padding"
        }
      },
      "gap": {
        "xs": {
          "$value": "0.25rem",
          "$description": "Extra small gap between elements"
        },
        "sm": {
          "$value": "0.5rem",
          "$description": "Small gap between elements"
        },
        "md": {
          "$value": "0.75rem",
          "$description": "Medium gap between elements"
        },
        "lg": {
          "$value": "1rem",
          "$description": "Large gap between elements"
        },
        "xl": {
          "$value": "1.5rem",
          "$description": "Extra large gap between elements"
        }
      }
    },
    "layout": {
      "section": {
        "y": {
          "mobile": {
            "$value": "1.5rem",
            "$description": "Section vertical spacing on mobile"
          },
          "desktop": {
            "$value": "2rem",
            "$description": "Section vertical spacing on desktop"
