{
  "$schema": "https://schemas.tr-pro.com/v1/design-tokens.json",
  "$description": "Design tokens for swole-tracker - unified cross-platform design system",
  "color": {
    "$type": "color",
    "base": {
      "black": {
        "$value": "oklch(0.145 0 0)",
        "$description": "True black - used as dark background and light foreground"
      },
      "white": {
        "$value": "oklch(1 0 0)",
        "$description": "Pure white - used as light background and dark foreground"
      }
    },
    "semantic": {
      "foreground": {
        "$value": "{color.base.white}",
        "$description": "Primary foreground color (replaces text-black in light, text-white in dark)"
      },
      "background": {
        "$value": "{color.base.black}",
        "$description": "Primary background color (replaces bg-black in light, bg-white in dark)"
      }
    },
    "text": {
      "primary": {
        "$value": "{color.semantic.foreground}",
        "$description": "Primary text color"
      },
      "secondary": {
        "$value": "oklch(0.708 0 0)",
        "$description": "Secondary text color for less prominent content"
      },
      "muted": {
        "$value": "oklch(0.65 0 0)",
        "$description": "Muted text color for subtle content"
      }
    },
    "background": {
      "app": {
        "$value": "{color.semantic.background}",
        "$description": "Main application background"
      },
      "surface": {
        "$value": "oklch(0.205 0 0)",
        "$description": "Surface background for cards and elevated elements"
      },
      "card": {
        "$value": "{color.background.surface}",
        "$description": "Card background color"
      }
    },
    "border": {
      "default": {
        "$value": "oklch(0.269 0 0)",
        "$description": "Default border color"
      },
      "muted": {
        "$value": "{color.border.default}",
        "$description": "Muted border color"
      }
    },
    "primary": {
      "default": {
        "$value": "oklch(0.985 0 0)",
        "$description": "Primary brand color"
      },
      "hover": {
        "$value": "oklch(0.9 0 0)",
        "$description": "Primary color on hover"
      },
      "active": {
        "$value": "oklch(0.85 0 0)",
        "$description": "Primary color when active"
      }
    },
    "secondary": {
      "default": {
        "$value": "oklch(0.269 0 0)",
        "$description": "Secondary color"
      },
