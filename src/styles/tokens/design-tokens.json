  "shadow": {
    "$type": "shadow",
    "xs": {
      "$value": {
        "color": "rgba(0,0,0,0.25)",
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px"
      },
      "$description": "Extra small shadow"
    },
    "sm": {
      "$value": {
        "color": "rgba(0,0,0,0.35)",
        "offsetX": "0px",
        "offsetY": "2px",
        "blur": "8px",
        "spread": "0px"
      },
      "$description": "Small shadow"
    },
    "md": {
      "$value": {
        "color": "rgba(0,0,0,0.45)",
        "offsetX": "0px",
        "offsetY": "6px",
        "blur": "18px",
        "spread": "0px"
      },
      "$description": "Medium shadow"
    },
    "lg": {
      "$value": {
        "color": "rgba(0,0,0,0.55)",
        "offsetX": "0px",
        "offsetY": "12px",
        "blur": "30px",
        "spread": "0px"
      },
      "$description": "Large shadow"
    },
    "focus": {
      "$value": [
        {
          "color": "oklch(0.985 0 0 / 0.4)",
          "offsetX": "0px",
          "offsetY": "0px",
          "blur": "0px",
          "spread": "2px"
        },
        {
          "color": "oklch(0.488 0.243 264.376 / 0.2)",
          "offsetX": "0px",
          "offsetY": "0px",
          "blur": "0px",
          "spread": "4px"
        }
      ],
      "$description": "Focus ring shadow"
    }
  },
  "typography": {
