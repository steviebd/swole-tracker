{
  "$schema": "https://schemas.tr-pro.com/v1/design-tokens.json",
  "$description": "Light theme overrides for swole-tracker design tokens",
  "color": {
    "$type": "color",
    "semantic": {
      "foreground": {
        "$value": "oklch(0.145 0 0)",
        "$description": "Dark foreground for light theme"
      },
      "background": {
        "$value": "oklch(1 0 0)",
        "$description": "Light background for light theme"
      }
    },
    "text": {
      "primary": {
        "$value": "oklch(0.145 0 0)",
        "$description": "Dark text for light theme"
      },
      "secondary": {
        "$value": "oklch(0.556 0 0)",
        "$description": "Medium gray text for light theme"
      },
      "muted": {
        "$value": "oklch(0.708 0 0)",
        "$description": "Light gray text for light theme"
      }
    },
    "background": {
      "app": {
        "$value": "oklch(1 0 0)",
        "$description": "Pure white app background for light theme"
      },
      "surface": {
        "$value": "oklch(1 0 0)",
        "$description": "White surface background for light theme"
      },
      "card": {
        "$value": "oklch(1 0 0)",
        "$description": "White card background for light theme"
      }
    },
    "border": {
      "default": {
        "$value": "oklch(0.922 0 0)",
        "$description": "Light gray border for light theme"
      }
    },
    "primary": {
      "default": {
        "$value": "oklch(0.205 0 0)",
        "$description": "Dark primary for light theme"
      },
      "hover": {
        "$value": "oklch(0.145 0 0)",
        "$description": "Darker primary on hover for light theme"
      },
      "active": {
        "$value": "oklch(0.1 0 0)",
        "$description": "Even darker primary when active for light theme"
      }
    },
    "secondary": {
      "default": {
        "$value": "oklch(0.97 0 0)",
        "$description": "Very light gray for light theme"
      },
      "hover": {
        "$value": "oklch(0.95 0 0)",
        "$description": "Slightly darker gray on hover for light theme"
      }
    },
    "status": {
      "success": {
        "default": {
          "$value": "oklch(0.646 0.222 142.5)",
          "$description": "Green success for light theme"
        },
        "muted": {
          "$value": "oklch(0.95 0.05 142.5)",
          "$description": "Muted success background for light theme"
        }
      },
      "warning": {
        "default": {
          "$value": "oklch(0.828 0.189 84.429)",
          "$description": "Orange warning for light theme"
        },
        "muted": {
          "$value": "oklch(0.95 0.05 70.08)",
          "$description": "Muted warning background for light theme"
        }
      },
      "danger": {
        "default": {
          "$value": "oklch(0.577 0.245 27.325)",
          "$description": "Red danger for light theme"
        },
        "muted": {
          "$value": "oklch(0.95 0.05 25.331)",
          "$description": "Muted danger background for light theme"
        }
      },
      "info": {
        "default": {
          "$value": "oklch(0.6 0.118 264.376)",
          "$description": "Blue info for light theme"
        },
        "muted": {
          "$value": "oklch(0.95 0.05 264.376)",
          "$description": "Muted info background for light theme"
        }
      }
    },
    "chart": {
      "1": {
        "$value": "oklch(0.646 0.222 41.116)",
        "$description": "Chart color 1 - Orange for light theme"
      },
      "2": {
        "$value": "oklch(0.6 0.118 184.704)",
        "$description": "Chart color 2 - Teal for light theme"
      },
      "3": {
        "$value": "oklch(0.398 0.07 227.392)",
        "$description": "Chart color 3 - Blue for light theme"
      },
      "4": {
        "$value": "oklch(0.828 0.189 84.429)",
        "$description": "Chart color 4 - Yellow for light theme"
      },
      "5": {
        "$value": "oklch(0.769 0.188 70.08)",
        "$description": "Chart color 5 - Green for light theme"
      }
    },
    "glass": {
      "highlight": {
        "$value": "oklch(0.145 0 0 / 0.02)",
        "$description": "Glass effect highlight for light theme"
      },
      "accent": {
        "$value": "oklch(0.6 0.118 264.376 / 0.05)",
        "$description": "Glass effect accent for light theme"
      },
      "border": {
        "$value": "oklch(0.145 0 0 / 0.3)",
        "$description": "Glass effect border mix for light theme"
      },
      "card": {
        "$value": "oklch(0.99 0 0 / 0.8)",
        "$description": "Glass card background for light theme"
      },
      "modal": {
        "$value": "oklch(1 0 0 / 0.95)",
        "$description": "Glass modal background for light theme"
      }
    }
  },
  "shadow": {
    "$type": "shadow",
    "xs": {
      "$value": {
        "color": "rgba(0,0,0,0.08)",
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px"
      },
      "$description": "Softer extra small shadow for light theme"
    },
    "sm": {
      "$value": {
        "color": "rgba(0,0,0,0.12)",
        "offsetX": "0px",
        "offsetY": "2px",
        "blur": "8px",
        "spread": "0px"
      },
      "$description": "Softer small shadow for light theme"
    },
    "md": {
      "$value": {
        "color": "rgba(0,0,0,0.15)",
        "offsetX": "0px",
        "offsetY": "6px",
        "blur": "18px",
        "spread": "0px"
      },
      "$description": "Softer medium shadow for light theme"
    },
    "lg": {
      "$value": {
        "color": "rgba(0,0,0,0.18)",
        "offsetX": "0px",
        "offsetY": "12px",
        "blur": "30px",
        "spread": "0px"
      },
      "$description": "Softer large shadow for light theme"
    },
    "focus": {
      "$value": [
        {
          "color": "oklch(0.145 0 0 / 0.1)",
          "offsetX": "0px",
          "offsetY": "0px",
          "blur": "0px",
          "spread": "2px"
        },
        {
          "color": "oklch(0.488 0.243 264.376 / 0.15)",
          "offsetX": "0px",
          "offsetY": "0px",
          "blur": "0px",
          "spread": "4px"
        }
      ],
      "$description": "Enhanced focus ring shadow for light theme"
    }
  },
  "gradient": {
    "subtle": {
      "$type": "gradient",
      "$value": {
        "type": "linear",
        "angle": "180deg",
        "stops": [
          {
            "position": "0%",
            "color": "oklch(0.99 0 0)"
          },
          {
            "position": "100%",
            "color": "oklch(0.97 0 0)"
          }
        ]
      },
      "$description": "Subtle gradient for light theme backgrounds"
    },
    "surface": {
      "$type": "gradient",
      "$value": {
        "type": "linear",
        "angle": "180deg",
        "stops": [
          {
            "position": "0%",
            "color": "oklch(1 0 0)"
          },
          {
            "position": "100%",
            "color": "oklch(0.99 0 0)"
          }
        ]
      },
      "$description": "Surface gradient for light theme elevated elements"
    },
    "primary": {
      "$type": "gradient",
      "$value": {
        "type": "linear",
        "angle": "135deg",
        "stops": [
          {
            "position": "0%",
            "color": "oklch(0.205 0 0)"
          },
          {
            "position": "100%",
            "color": "oklch(0.145 0 0)"
          }
        ]
      },
      "$description": "Primary gradient for light theme buttons"
    },
    "accent": {
      "$type": "gradient",
      "$value": {
        "type": "linear",
        "angle": "135deg",
        "stops": [
          {
            "position": "0%",
            "color": "oklch(0.6 0.118 264.376)"
          },
          {
            "position": "100%",
            "color": "oklch(0.488 0.243 264.376)"
          }
        ]
      },
      "$description": "Accent gradient for light theme special elements"
    },
    "shell": {
      "radial": {
        "$type": "gradient",
        "$value": {
          "type": "radial",
          "shape": "ellipse",
          "size": "1200px 800px",
          "position": "30% 20%",
          "stops": [
            {
              "position": "0%",
              "color": "oklch(0.99 0 0)"
            },
            {
              "position": "60%",
              "color": "oklch(0.97 0 0)"
            },
            {
              "position": "100%",
              "color": "oklch(0.95 0 0)"
            }
          ]
        },
        "$description": "Shell radial gradient for light theme app backgrounds"
      }
    }
  }
}